project Vk_Parser_Main is

   for Source_Dirs use ("src/**");
   for Object_Dir use "obj";
   for Main use ("main.adb");

   package Compiler is
      for Default_Switches ("ada") use ("-gnat2012", "-fstack-check", "-gnato", "-ffunction-sections", "-fdata-sections", "-O3");
   end Compiler;

   package Binder is
   end Binder;

   package Linker is
      for Switches ("ada") use ("-Wl,--gc-sections", "-flto");
   end Linker;

end Vk_Parser_Main;

